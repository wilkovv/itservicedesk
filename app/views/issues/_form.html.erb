<div class="container">
<div class="row justify-content-center mt-4">
<div class="col-8">
<div class="mb-3">
<h1><%= header_text %></h1>
<%= form_with(model: issue) do |form| %>
  <% if issue.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
        <% issue.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category, [['Hardware', 'Hardware'], ['Software', 'Software']], {}, { class: 'form-control' } %>
  </div>

  <div class="field mb-3">
    <%= form.label :photo, style: "display: block" %>
    <%= form.file_field :photo, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control", rows: '8' %>
  </div>

  <div class="actions">
  <div class="d-grid gap-2">
    <%= form.submit "Create Issue", class: "btn btn-success btn-block" %>
  </div>
  </div>
<% end %>
</div>
</div>
</div>
</div>