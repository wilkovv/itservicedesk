<html lang="en" data-bs-theme="dark">
        <div class="container-fluid px-0">
                <nav class="navbar navbar-expand-lg bg-primary">
                        <a class="navbar-brand px-3" href="#">IT Help Desk</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                                </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                                <ul class="nav">
                                        <li class="nav-item">
                                                <%= link_to "Issues", issues_path, class: current_page?(issues_path) ? "nav-link active" : "nav-link", aria_current: "page" %>
                                        </li>
                                </ul>
                                <ul class="nav">
                                        <li class="nav-item <%= 'active' if current_page?(servicemen_path) %>">
                                                <% puts "Value of my_variable: #{servicemen_path.inspect}" %>
                                                <%= link_to "Servicemen", servicemen_path, class: current_page?(servicemen_path) ? "nav-link active" : "nav-link" %>
                                        </li>
                                </ul>
                                <ul class="nav">
                                        <li class="nav-item <%= 'active' if current_page?(users_path) %>">
                                                <%= link_to "Users", users_path, class: current_page?(users_path) ? "nav-link active" : "nav-link" %>    
                                        </li>
                                </ul>
                                                  <span class="nav">
                                <% if user_signed_in? %>
                                <div> Welcome <%= current_user.email %> </div>
                                        <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
                                <% elsif serviceman_signed_in? %>
                                 <div> Welcome <%= current_serviceman.email %> </div>
                                        <%= button_to "Sign out", destroy_serviceman_session_path, method: :delete, class: "btn btn-danger" %>
                                <% else %>
                                        <%= button_to "Sign in", new_user_session_path, method: :get, class: "btn btn-success" %>
                                <% end %>
                                </span>
                        </ul>
                        </div>

                </nav>
        </div>
</html>